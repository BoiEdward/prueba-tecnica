<!-- views/registrar-libro.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrar Libro</title>
    <!-- Agregar enlaces a Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: rgba(154, 208, 176, 0.275);
        }
        .container {
            margin-top: 50px;
        }
        .formulario {
            max-width: 500px;
            margin: auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-4">Editar Libro</h1>
        <form class="formulario" method="post" action="/api/editar-libro">
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre del libro</label>
                <input type="text" class="form-control" id="nombre" name="nombre" required value="<%= libro.nombre %>">
            </div>
            <div class="mb-3">
                <label for="descripcion" class="form-label">Descripci√≥n del libro</label>
                <textarea class="form-control" id="descripcion" name="descripcion" rows="3" required><%= libro.descripcion %></textarea>
            </div>
            <div class="mb-3">
                <label for="estado" class="form-label">Estado del libro</label>
                <select class="form-select" id="estado" name="estado" required>
                    <option value="Disponible" <% if (libro.estado === 'Disponible') { %>selected<% } %>>Disponible</option>
                    <option value="Prestado" <% if (libro.estado === 'Prestado') { %>selected<% } %>>Prestado</option>
                </select>
            </div>
            <input type="hidden" name="id" value="<%= libro.id %>">
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        </form>
    </div>

    <!-- Agregar scripts de Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
